{
  "name": "@els/els-tool-validate-content-ingestion",
  "version": "0.0.0",
  "description": "ELS Validate Content Ingestion",
  "main": "dist/index.js",
  "applicationType": "MODULE",
  "engines": {
    "node": ">=8.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "scripts": {
    "start": "npm run build:clean && npm-run-all --parallel build:commonjs-watch build:scss-watch",
    "dev": "npm run build:clean && node scripts/webpackDevServer.js",
    "document": "styleguidist server --config config/styleguide.config.js --verbose",
    "html-document": "styleguidist build --config config/styleguide.config.js",
    "build": "npm install && npm-run-all build:clean build:commonjs build:scss coverage html-document",
    "test": "cross-env NODE_ENV=test jest --runInBand --config config/jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --config config/jest.config.js --watch",
    "coverage": "jest --coverage --config config/jest.config.js",
    "lint": "eslint ./module --cache",
    "lint:watch": "esw -w",
    "format": "prettier --config config/prettier.config.js --write module/**/*.{js,scss}",
    "styleguide:build": "styleguidist build",
    "build:commonjs": "cross-env NODE_ENV=production babel ./module/ --out-dir ./dist",
    "build:scss": "cpx \"./module/**/*.scss\" ./dist",
    "build:clean": "rimraf dist",
    "build:commonjs-watch": "cross-env NODE_ENV=development babel ./module/ --out-dir ./dist -w",
    "build:scss-watch": "cpx \"./module/**/*.scss\" ./dist -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elsevierPTG/els-tool-validate-content-ingestion.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@els/els-styleguide-core": "latest",
    "@els/els-styleguide-form-field": "latest",
    "classnames": "2.2.6",
    "libxmljs": "^0.19.5",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "7.2.3",
    "babel-jest": "23.6.0",
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "css-loader": "0.28.11",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "enzyme-to-json": "3.3.4",
    "eslint": "4.19.1",
    "eslint-plugin-react": "7.7.0",
    "eslint-watch": "4.0.2",
    "expect": "1.12.0",
    "eyes": "^0.1.8",
    "file-loader": "1.1.11",
    "history": "4.7.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "2.30.1",
    "husky": "1.0.0-rc.13",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "jest-sonar-reporter": "1.3.0",
    "lint-staged": "7.0.5",
    "lodash": "^4.17.11",
    "node-sass": "4.9.3",
    "npm-run-all": "4.1.5",
    "pg-promise": "^8.5.5",
    "prettier": "1.14.3",
    "react-hot-loader": "3.1.3",
    "react-styleguidist": "6.5.3",
    "rimraf": "2.6.2",
    "sass-loader": "7.0.3",
    "style-loader": "0.19.0",
    "svg-sprite-loader": "3.7.3",
    "svgo": "1.0.5",
    "svgo-loader": "2.1.0",
    "uglifyjs-webpack-plugin": "1.2.4",
    "url-loader": "0.6.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.11.1",
    "xml2js": "^0.4.19"
  }
}
